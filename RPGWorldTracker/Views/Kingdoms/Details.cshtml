@model RPGWorldTracker.ViewModels.KingdomsViewModel

@{
	ViewData["Title"] = "Details";
}

<h1>
	@Html.DisplayFor(model => model.Kingdom.Name)
	<a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Kingdom.KingdomId">Edit Kingdom</a>
</h1>

<div>
	<hr />
	<div class="row">
		<div class="col-6 module-border">
			<h3 class="text-primary">
				Details about this kingdom
			</h3>
			<table class="table table-hover table-sm">
				<tr>
					<td class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Kingdom.Geography)</td>
					<td class="col-sm-10">@Html.DisplayFor(model => model.Kingdom.Geography)</td>
				</tr>
				<tr>
					<td class="col-sm-2 fw-bold">Main Resources</td>
					<td class="col-sm-10">@Html.DisplayFor(model => model.Kingdom.ResourcesEconomy)</td>
				</tr>
				<tr>
					<td class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Kingdom.Culture)</td>
					<td class="col-sm-10">@Html.DisplayFor(model => model.Kingdom.Culture)</td>
				</tr>
				<tr>
					<td class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Kingdom.Government)</td>
					<td class="col-sm-10">@Html.DisplayFor(model => model.Kingdom.Government)</td>
				</tr>
				<tr>
					<td class="col-sm-2 fw-bold">Historical Events</td>
					<td class="col-sm-10">@Html.DisplayFor(model => model.Kingdom.HistoricalEvents)</td>
				</tr>
				<tr>
					<td class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Kingdom.Threats)</td>
					<td class="col-sm-10">@Html.DisplayFor(model => model.Kingdom.Threats)</td>

				</tr>
				<tr>
					<td class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Kingdom.Landmarks)</td>
					<td class="col-sm-10">@Html.DisplayFor(model => model.Kingdom.Landmarks)</td>

				</tr>
				<tr>
					<td class="col-sm-2 fw-bold">Other Details</td>
					<td class="col-sm-10">@Html.DisplayFor(model => model.Kingdom.OtherDetails)</td>

				</tr>
				<tr>
					<td class="col-sm-2 fw-bold">@Html.DisplayNameFor(model => model.Kingdom.Campaign)</td>
					<td class="col-sm-10"><a class="text-decoration-none btn btn-outline-primary" asp-controller="Campaigns" asp-action="Details" asp-route-id="@Model.Kingdom.CampaignId">@Html.DisplayFor(model => model.Kingdom.Campaign.Name)</a></td>

				</tr>
			</table>

		</div>
		<div class="col-5 module-border">
			<h3 class="text-primary">
				Towns in this kingdom
				<a class="btn btn-outline-success btn-sm" asp-action="Create" asp-controller="Towns">Create New</a>
			</h3>
			@foreach (var item in Model.Towns)
			{
				<table class="table table-hover table-sm">
					<tr>
						<td>
							<a class="text-decoration-none btn btn-outline-primary" asp-controller="Towns" asp-action="Details"
							   asp-route-id="@item.TownId">@Html.DisplayFor(modelItem => item.Name)</a>
						</td>
					</tr>
				</table>
			}
		</div>
	</div>
</div>
