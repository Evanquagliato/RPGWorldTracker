@model RPGWorldTracker.Models.Kingdom

@{
	ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete @Model.Name?</h3>
<div>
	<form asp-action="Delete">
		<input type="hidden" asp-for="KingdomId" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-action="Details" asp-controller="Kingdoms" asp-route-id="@Model.KingdomId">Back to Kingdom</a>
	</form>
</div>
