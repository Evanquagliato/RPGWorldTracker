@model IEnumerable<RPGWorldTracker.Models.Campaign>

@{
	ViewData["Title"] = "Index";
}

<h1>All Campaigns</h1>

<div class="module-border">
	<table class="table table-hover">
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td><a class="text-decoration-none btn btn-outline-primary" asp-controller="Campaigns" asp-action="Details" asp-route-id="@item.CampaignId">@Html.DisplayFor(modelItem => item.Name)</a></td>
					<td>
						@Html.DisplayFor(modelItem => item.Description)
					</td>
					<td>
						<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.CampaignId">Edit</a>
						<a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.CampaignId">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<br />
<h4>
	<a class="btn btn-outline-success" asp-action="Create">Create A New Campaign</a>
</h4>
